// Prisma Schema for DATA Database (VPS Local)
// Contains: workspace schema (raw imported data - disposable)
//           reference schema (transformed data - rebuildable)

generator client {
  provider = "prisma-client"
  output   = "../node_modules/@prisma/client-data"
}

datasource db {
  provider = "postgresql"
  schemas  = ["workspace", "reference"]
}

// ============================================
// REFERENCE SCHEMA - Transformed stable data
// ============================================

model Carrier {
  code        String   @id
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  services Service[]

  @@map("carriers")
  @@schema("reference")
}

model Service {
  carrierCode String   @map("carrier_code")
  code        String
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  carrier Carrier @relation(fields: [carrierCode], references: [code])

  @@id([carrierCode, code])
  @@map("services")
  @@schema("reference")
}

model Zip3Demographics {
  zip3            String   @id
  totalPopulation Int      @default(0) @map("total_population")
  totalHouseholds Int      @default(0) @map("total_households")
  zipCount        Int      @default(0) @map("zip_count")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("zip3_demographics")
  @@schema("reference")
}

model Zip3Centroid {
  zip3            String   @id
  latitude        Decimal? @db.Decimal(10, 7)
  longitude       Decimal? @db.Decimal(10, 7)
  primaryCity     String?  @map("primary_city")
  stateId         String?  @map("state_id")
  stateName       String?  @map("state_name")
  statePopulation Int?     @map("state_population")
  createdAt       DateTime @default(now()) @map("created_at")

  @@map("zip3_centroids")
  @@schema("reference")
}

model DeliveryMatrix {
  originZip3     String   @map("origin_zip3")
  destZip3       String   @map("dest_zip3")
  carrierCode    String   @map("carrier_code")
  serviceCode    String   @map("service_code")
  transitDays    Int      @map("transit_days")
  deliveryScore  Int      @map("delivery_score")
  zone           String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@id([originZip3, destZip3, carrierCode, serviceCode])
  @@map("delivery_matrix")
  @@schema("reference")
}
