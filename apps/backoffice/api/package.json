{
  "name": "@handled/api",
  "version": "1.0.0",
  "description": "Handled Backoffice API - Node.js + Fastify + Prisma",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "NODE_ENV=test PRIMARY_DATABASE_URL=postgresql://donkey@localhost:5432/handled_test DATA_DATABASE_URL=postgresql://donkey@localhost:5432/handled_test node --import tsx --test tests/*.test.ts",
    "test:watch": "NODE_ENV=test PRIMARY_DATABASE_URL=postgresql://donkey@localhost:5432/handled_test DATA_DATABASE_URL=postgresql://donkey@localhost:5432/handled_test node --import tsx --test --watch tests/*.test.ts",
    "test:reset": "dropdb --if-exists handled_test && createdb handled_test && PGUSER=donkey TEST_DATABASE_URL=postgresql://localhost:5432/handled_test bash ../../../database/run-migrations-dev.sh -test && npm run db:generate",
    "db:generate": "prisma generate --config=./prisma/config-primary.ts --schema=./prisma/schema-primary.prisma && prisma generate --config=./prisma/config-data.ts --schema=./prisma/schema-data.prisma && node scripts/fix-prisma-packages.js",
    "db:generate:primary": "prisma generate --config=./prisma/config-primary.ts --schema=./prisma/schema-primary.prisma && node scripts/fix-prisma-packages.js",
    "db:generate:data": "prisma generate --config=./prisma/config-data.ts --schema=./prisma/schema-data.prisma && node scripts/fix-prisma-packages.js",
    "db:push": "prisma db push --schema=./prisma/schema-primary.prisma && prisma db push --schema=./prisma/schema-data.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema-primary.prisma",
    "db:studio:primary": "prisma studio --schema=./prisma/schema-primary.prisma",
    "db:studio:data": "prisma studio --schema=./prisma/schema-data.prisma",
    "postinstall": "npm run db:generate"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@lucia-auth/adapter-prisma": "^4.0.0",
    "@node-rs/argon2": "^2.0.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.1.0",
    "lucia": "^3.2.1",
    "oslo": "^1.2.1",
    "pg": "^8.13.1",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "prisma": "^7.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
